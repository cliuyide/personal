<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1" metadata-complete="true">
  <!--   -->
  <context-param>
    <param-name>defaultHtmlEscape</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      classpath:conf/spring/spring-database.xml
    </param-value>
  </context-param>
  <listener>
    <listener-class>
      org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener>
  <listener>
    <listener-class>
      org.springframework.web.context.request.RequestContextListener
    </listener-class>
  </listener>
  <filter>
		<filter-name>appFilter</filter-name>
		<filter-class>org.liuyi.projects.personal.component.ApplicationFilter</filter-class>
		<init-param>
			<param-name>loginPath</param-name>
			<param-value>login/login.do</param-value>
		</init-param>
		<init-param>
			<!-- 登录后所有人都可以访问的路径  -->
			<param-name>commonPath</param-name>
			<param-value>index/main.do,login/logout.do</param-value>
		</init-param>		
		<init-param>
			<param-name>excludePaths</param-name>
			<param-value>common/*.do,login/*.do,subject/outerAjaxList.do,base/sync/sync101basedata/notify.do,sync/syncresource/syncResource.do,sync/makepdf/pdfnotify.do,organization/organization/listOrganizationNodes.do</param-value>
		</init-param>
	</filter>
  
	<!-- Reads request input using UTF-8 encoding -->
	<filter>
		<filter-name>characterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>characterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Handles all requests into the application -->
	<servlet>
		<servlet-name>Dispatcher Servlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath:conf/spring/spring-mvc.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<welcome-file-list>  
    	<welcome-file>index.jsp</welcome-file>  
  	</welcome-file-list>
</web-app>